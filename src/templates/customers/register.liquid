<div class="sign-up-form">
	<h1>{{ 'customer.register.title' | t }}</h1>

	{% form 'create_customer' %}
		{{ form.errors | default_errors }}

		<input class="input" type="text"
			   name="customer[first_name]"
			   id="FirstName"
			   placeholder="{{ 'customer.register.first_name' | t }}"
			   autofocus
			   {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
			   required>

		<input class="input" type="text"
			   name="customer[last_name]"
			   id="LastName"
			   placeholder="{{ 'customer.register.last_name' | t }}"
			   {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
			   required>

		<input class="input" type="email"
			   name="customer[email]"
			   id="Email"
			   class="{% if form.errors contains 'email' %}input-error{% endif %}"
			   placeholder="{{ 'customer.register.email' | t }}"
			   value="{% if form.email %}{{ form.email }}{% endif %}"
			   spellcheck="false"
			   autocomplete="off"
			   autocapitalize="off"
			   required>

		<input class="input" type="password"
			   name="customer[password]"
			   id="CreatePassword"
			   class="{% if form.errors contains 'password' %}input-error{% endif %}"
			   placeholder="{{ 'customer.register.password' | t }}"
			   required>

		<div class="form-item">
			<button class="button button-cta entry-button" type="submit">
				{{ 'customer.register.submit' | t | upcase }}

				<div class="icon-container icon-container--arrow">
					{% include 'icon-white-arrow' %}
				</div>
			</button>

			<a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
		</div>
	{% endform %}
</div>
