<section class="section-container video-section"
		 {%- if section_title and title_view != true -%}style="{{- section_style -}}"{%- endif -%}>
	{%- if section_title != blank and title_view != false -%}
		<h3 class="title video-section__title">
			{{- section_title -}}
		</h3>
	{%- endif -%}

	{%- if video_link != blank -%}
		<div class="video-section__youtube">
			{%- if image_background != blank -%}
				<div class="js-video-section-overlay video-section__overlay">
					<picture>
						<source srcset="{{ image_background | img_url: '400x' }} 1x, {{ image_background | img_url: '800x' }} 2x" media="(max-width: 400px)">

						<source srcset="{{ image_background | img_url: '767x' }} 1x, {{ image_background | img_url: '1534x' }} 2x" media="(max-width: 767px)">

						<source srcset="{{ image_background | img_url: '991x' }} 1x, {{ image_background | img_url: '1982x' }} 2x" media="(max-width: 991px)">

						<source srcset="{{ image_background | img_url: '700x' }} 1x, {{ image_background | img_url: '1400x' }} 2x" media="(min-width: 1400px)">

						<source srcset="{{ image_background | img_url: '500x' }} 1x, {{ image_background | img_url: '1000x' }} 2x" media="(min-width: 992px)">

						<img srcset="{{- image_background | img_url: '700x' -}}" alt="{{- section_title -}}" width="100%">
					</picture>

					<div class="js-button-video button-video"></div>
				</div>
			{%- endif -%}

			<iframe id="video" class="js-video" width="100%" height="100%" src="{{- src -}}" {{- video_settings -}}>
			</iframe>
		</div>
	{%- endif -%}
</section>
