<div class="social-sharing">
	<div class="social-sharing__wrapper">
	  {% if settings.share_facebook %}
		<a target="_blank" class="social-sharing__link" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
			{% include 'icon-facebook' %}
		</a>
	  {% endif %}

	  {% if settings.share_twitter %}
		<a target="_blank" class="social-sharing__link" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
			{% include 'icon-twitter' %}
		</a>
	  {% endif %}

	  {% if settings.share_pinterest %}
		<a target="_blank" class="social-sharing__link" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
			{% include 'icon-pinterest' %}
		</a>
	  {% endif %}

	  {% if settings.share_linkedin %}
		<a target="_blank" class="social-sharing__link" href="//linkedin.com/shareArticle?mini=true&url={{ shop.url | append: share_permalink }}">
			{% include 'icon-linkedin' %}
		</a>
	  {% endif %}
	</div>
</div>
